<%- include layout/head %>

  <div class="container">
    <div class="row">
      <div class="col col-md-12">
        <% if (user == null) { %>
          <div class="alert alert-danger">
            User not found! :(
          </div>
        <% } else { %>

          <table class="table table-striped">
            <tbody>
              <tr>
                <td>Name</td>
                <td><%= user.full_name %></td>
              </tr>
              <tr>
                <td>Username</td>
                <td><%= user.username %></td>
              </tr>
              <tr>
                <td>Email</td>
                <td><%= user.email %></td>
              </tr>
              <tr>
                <td colspan="2">
                  <a class="btn btn-secondary" href="/users/edit/<%= user.id %>">Edit Profile</a>

                  <a class="btn btn-secondary" href="/users/delete/<%= user.id %>">Delete Account</a>
                </td>
              </tr>
            </tbody>
          </table>

          


        <% } %>
      </div>
    </div>
  </div>

<%- include layout/foot %>
