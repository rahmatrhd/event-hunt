<%- include layout/head %>
<div class = "container">
  <div class="row">
    <div class="col col-md-6">
      <div class="form-group">
        <form action="/login" method="post">
          <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" name="username" placeholder="input your user name" class="form-control" id = "username">
          </div>
          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" name="password" placeholder="input your password" id ="password">
          </div>
          <input type="submit" value="Submit">
        </form>
    </div>
  </div>
</div>
