<%- include layout/head %>

  <div class="container">
    <div class="row">
      <div class="col col-md-12">
        <% if (user == null) { %>
          <div class="alert alert-danger">
            User not found! :(
          </div>
        <% } else { %>
          <h1>My Profile</h1>

          <table class="table table-striped">
            <tbody>
              <tr>
                <td>Name</td>
                <td><%= user.full_name %></td>
              </tr>
              <tr>
                <td>Username</td>
                <td><%= user.username %></td>
              </tr>
              <tr>
                <td>Email</td>
                <td><%= user.email %></td>
              </tr>
                <tr>
                  <td colspan="2">
                    <a class="btn btn-primary" href="/users/add-interest">Add your Interest!</a>
                    <a class="btn btn-secondary disabled" href="#">Edit Profile</a>
                    <a class="btn btn-danger disabled" href="#">Delete Account</a>
                  </td>
                </tr>
            </tbody>
          </table>
        <% } %>
      </div>
    </div>

    <div class="row">
      <div class="col col-md-6">
        <h1>My Events</h1>
      </div>
      <div class="col col-md-6">
        <h1>Events I have to attend</h1>
      </div>
    </div>


  </div>

<%- include layout/foot %>
